<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    android:clipChildren="false">

    <!-- Left Action Buttons (revealed when swiping right) -->
    <LinearLayout
        android:id="@+id/leftActions"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start|center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/buttonAwaiting"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/outcome_awaiting"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_schedule"
                android:importantForAccessibility="no"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/awaiting"
                android:textSize="10sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonNextStage"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/outcome_passed"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_forward"
                android:importantForAccessibility="no"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/next_stage"
                android:textSize="10sp"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <!-- Right Action Button (revealed when swiping left) -->
    <LinearLayout
        android:id="@+id/rightActions"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end|center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/buttonReject"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/outcome_rejected"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:importantForAccessibility="no"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/rejected"
                android:textSize="10sp"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <!-- Main Card Content (slides to reveal actions) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardCornerRadius="8dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="?attr/colorSurface">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <!-- Outcome Indicator Circle -->
            <View
                android:id="@+id/outcomeIndicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/circle_indicator"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Job Title -->
            <TextView
                android:id="@+id/textJobTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/outcomeIndicator"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Senior Android Developer" />

            <!-- Company Name -->
            <TextView
                android:id="@+id/textCompanyName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:layout_constraintTop_toBottomOf="@id/textJobTitle"
                app:layout_constraintStart_toStartOf="@id/textJobTitle"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Acme Corp (via TechRecruit)" />

            <!-- Interview Date -->
            <TextView
                android:id="@+id/textInterviewDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:layout_constraintTop_toBottomOf="@id/textCompanyName"
                app:layout_constraintStart_toStartOf="@id/textJobTitle"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Dec 15, 2025 at 10:00 AM" />

            <!-- Stage Badge -->
            <TextView
                android:id="@+id/badgeStage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/badge_stage_background"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="@color/badge_stage_text"
                app:layout_constraintTop_toBottomOf="@id/textInterviewDate"
                app:layout_constraintStart_toStartOf="@id/textJobTitle"
                tools:text="First Stage" />

            <!-- Method Badge -->
            <TextView
                android:id="@+id/badgeMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/badge_method_background"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="@color/badge_method_text"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/badgeStage"
                app:layout_constraintStart_toEndOf="@id/badgeStage"
                tools:text="Video Call"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>
